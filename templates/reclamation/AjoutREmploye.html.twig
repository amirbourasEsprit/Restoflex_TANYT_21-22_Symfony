{% extends 'base.html.twig' %}

{% block title %}Ajouter Type Reclamation
{% endblock %}

{% block content %}
	<!-- Nested Row within Card Body -->
	<div class="row justify-content-md-center">

		<div class="col-lg-6">
			<div class="card o-hidden border-0 shadow-lg my-5">
				<div class="card-body p-0">
					<div class="p-5">
						<div class="text-center">
							<h1 class="h4 text-gray-900 mb-4">Ajouter Reclamation</h1>
						</div>

						{{form_start(form,{attr:{'novalidate':'novalidate'}})}}
						<div class="form-group row">
							<div class="col-sm-6 mb-3 mb-sm-0">
								<div class="col-sm-15">
									{{ form_widget(form.destinataire,{ 'attr': {'class': "form-control form-control-user",
                                            'placeholder': 'Destinataire'|trans}}) }}
									{% if form_errors(form.destinataire) is not empty %}
										<div class="alert alert-danger">{{ form_errors(form.destinataire) }}</div>
									{% endif %}
								</div>
								<div class="col-sm-15">
									{{ form_widget(form.description,{ 'attr': {'class': "form-control form-control-user",
                                            'placeholder': 'Description'|trans}}) }}

								</div>

								<div class="row">
									<div class="col-md-12 col-sm-20">
										{{ form_widget(form.dateReclamation,{'attr':{'class':'form-control'}}) }}

									</div>
								</div>
								<div class="row">
									<div class="col-md-12 col-sm-20">
										{{ form_widget(form.idTypeReclamation,{ 'attr': {'class': "form-control form-control-user",
                                            'placeholder': 'Id Type Reclamation'|trans}}) }}
									</div>


								</div>
							</div>
							<hr>
							<div class="d-grid gap-2 col-6 mx-auto">
								<button type="submit" class="btn btn-primary btn-user btn-block">
									Ajouter Type Reclamation
								</button>
							</div>

							{{form_end(form)}}

							<hr>

						</div>
					</div>

				</div>

			</div>
		</div>
	</div>
{% endblock %}
