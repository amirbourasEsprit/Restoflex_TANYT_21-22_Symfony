{% extends 'base.html.twig' %}

{% block title %}Liste des Congés
{% endblock %}
{% block StyleAfterTemplate %}
	<link href="{{asset('https://cdn.jsdelivr.net/npm/select2@4.1.0-beta.1/dist/css/select2.min.css')}}" rel="stylesheet"/>
	<link rel="stylesheet" href="{{asset('https://fonts.googleapis.com/icon?family=Material+Icons')}}">
	<style>

		/* Table actions icons*/
		table.table td a.view {
			color: #03A9F4;
		}

		table.table td a.edit {
			color: #FFC107;
		}

		table.table td a.delete {
			color: #E34724;
			text-align: center;
		}
		.hint-text {
			float: left;
			margin-top: 6px;
			font-size: 95%;
		}
	</style>
{% endblock StyleAfterTemplate %}
{% block content %}
	<div class="row justify-content-md-center">

		<div class="col-lg-10">
			<div class="card o-hidden border-0 shadow-lg my-5">
				<div class="card-body p-0">
					<div class="p-5">
						<div class="text-center">
							<h1 class="h4 text-gray-900 mb-4">Liste des Congés</h1>
						</div>


						<div class="table-responsive-sm mt-4">
							<div class="d-none d-sm-inline-block form-inline navbar-search">
								<div class="input-group" id="dataTable_filter">
									<input id="myInput" type="text" class="form-control bg-light border-0 small" placeholder="Search for..." aria-label="Search" aria-describedby="basic-addon2">
									<div class="input-group-append">
										<div class="btn btn-primary">
											<i class="fas fa-search fa-sm"></i>
										</div>
									</div>
								</div>
							</div>
							<br>

							<br>
							<table class="table table-hover " id="myTable">
								<thead class="thead-light ">
									<tr>
										<th scope="col">Nom
										</th>
										<th scope="col">Date début
										</th>
										<th scope="col">Date fin
										</th>
										<th scope="col">Type du Congé
										</th>
										<th scope="col">Etat
										</th>
                    	<th scope="col">Controle
										</th>
                    <th scope="col">Action
										</th>
									</tr>
								</thead>
								<tbody id="myTable">
									{% for c in conge %}
										<tr>
											<td>
												{{c.idUtilisateur.nom}}
											</td>
											<td>
												{{c.dateDeb|date("m/d/Y")}}
											</td>
											<td>
												{{c.dateFin|date("m/d/Y")}}
											</td>
											<td>
												{{c.idTypeConge.nomTypeConge}}
											</td>
											<td>
										
                        {% if c.etat == "refusé" %}
												{% set status_color = "badge badge-danger" %}
												{% elseif c.etat =="approuvé" %}
												{% set status_color = "badge badge-success" %}
                         {% else  %}
															{% set status_color = "badge badge-warning" %}
														{% endif %}
														<span class="{{status_color}}">{{{{c.etat}} | upper}}</span>
											</td>
											<td>
												<a class="btn btn-success btn" href="{{ path('AccepterConge',{'id':c.idConge}) }}">Approuver</a>
										
												<a class="btn btn-danger btn" href="{{ path('RefuserConge',{'id':c.idConge}) }}">Refuser</a>
												</td>
											<td>
												<a href="{{ path('SupprimerConge',{'id':c.idConge}) }}" class="delete" title="Delete" data-toggle="tooltip">
													<i class="material-icons">&#xe872;</i>
												</a>
												<a href="{{ path('ModifierConge',{'id':c.idConge}) }}" class="edit" title="Edit" data-toggle="tooltip">
													<i class="material-icons">&#xE254;</i>
												</a>
											
											</td>

										</tr>
									{% endfor %}
								</tbody>
							</table>
						</div>
					</div>
				</div>
			</div>
		</div>
</div>

	{% endblock %}
	{% block JsAfterTemplate %}
		<script>
			$(document).ready(function () {
$("#myInput").on("keyup", function () {
var value = $(this).val().toLowerCase();
$("#myTable > tbody > tr").filter(function () {
$(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
});
});
});
		</script>
	{% endblock %}
