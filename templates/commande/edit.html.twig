{% extends 'base.html.twig' %}

{% block title %}Edit Commande{% endblock %}

{% block content %}
    <h1>Edit Commande</h1>

    <div style="padding-inline: 30%;">
   
     {{ form_start(form,{'attr': {'novalidate': 'novalidate'}} ) }}
     {{ form_row(form.statut, {'attr': {'class': 'form-control'}}) }}
     {{ form_row(form.dateCmd, {'attr': {'class': 'form-date-control'}}) }}
     {{ form_row(form.dateLivraison, {'attr': {'class': 'form-date-control'}}) }}
     {{ form_row(form.quantite, {'attr': {'class': 'form-control'}}) }}
     {{ form_row(form.idProduit, {'attr': {'class': 'form-control'}}) }}
     {{ form_row(form.idFournisseur, {'attr': {'class': 'form-control'}}) }}
     {{ form_row(form.idUtilisateur, {'attr': {'class': 'form-control'}}) }}

    <button class="btn btn-primary" style="float: right;right:50%;position:relative;margin-top:2%">{{ button_label|default('update') }}</button>
  
    {{ form_end(form) }}
      </div>

    <a href="{{ path('app_commande_index') }}">back to list</a>

    {{ include('commande/_delete_form.html.twig') }}


<!-- Nested Row within Card Body -->
<div class="row justify-content-md-center">

    <div class="col-lg-6">
        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <div class="p-5">
                    <div class="text-center">
                        <h1 class="h4 text-gray-900 mb-4">Ajouter une commande</h1>
                    </div>

                    {{form_start(form,{attr:{'novalidate':'novalidate', 'class':"user"}})}}
                    <div class="form-group row">
                        <div class="col-sm-6 mb-3 mb-sm-0">
{# 
                            {{ form_widget(form.idCmd,{ 'attr': {'class': "form-control form-control-user",
                                            'placeholder': 'Nom Restaurant'|trans} }) }}
                            <div style="color:red;"> {{ form_errors(form.idCmd) }}</div> #}
                        </div>
                        <div class="col-sm-6">
                            {{ form_widget(form.statut,{ 'attr': {'class': "form-control form-control-user",
                                            'placeholder': 'Specialite Restaurant'|trans} }) }}
                            <div style="color:red;"> {{ form_errors(form.statut) }}</div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-6 mb-3 mb-sm-0">
                            {{ form_widget(form.dateCmd,{ 'attr': {'class': "form-control form-control-user",
                                            'placeholder': 'Adresse Restaurant'|trans} }) }}
                            <div style="color:red;"> {{ form_errors(form.dateCmd) }}</div>
                        </div>
                        <div class="col-sm-6">
                            {{ form_widget(form.dateLivraison,{ 'attr': {'class': "form-control form-control-user",
                                            'placeholder': 'Email Restaurant'|trans} }) }}
                            <div style="color:red;"> {{ form_errors(form.dateLivraison) }}</div>
                        </div>
                    </div>

                   
                </div>
                <hr>
                <div class="d-grid gap-2 col-6 mx-auto">
                    <button type="submit" class="btn btn-primary btn-user btn-block">
                        Ajouter Restaurant
                    </button>
                </div>

                {{form_end(form)}}

                <hr>

            </div>
        </div>

    </div>

</div>
</div>



{% endblock %}